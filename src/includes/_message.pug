section.message
	div.message__logo
		img.message__logo__img(src="img/logo.svg", alt="Logo Renato Souza")

	div.message__text
		p.message__text__paragraph Me acompanhe nas Redes Sociais!
		p.message__text__paragraph Ou, se preferir, me mande um e-mail e vamos conversar. ;)

	ul.message__social
		li.message__social__item
			a.message__social__link(href="#" target="_blank")
				i.fa.fa-2x.fa-facebook(aria-hidden="true")
		li.message__social__item
			a.message__social__link(href="#" target="_blank")
				i.fa.fa-2x.fa-behance(aria-hidden="true")
		li.message__social__item
			a.message__social__link(href="#" target="_blank")
				i.fa.fa-2x.fa-whatsapp(aria-hidden="true")
		li.message__social__item
			a.message__social__link(href="#" target="_blank")
				i.fa.fa-2x.fa-envelope-o(aria-hidden="true")
